<!DOCTYPE html>
<html>
  <head>
    <title>One Month Rails Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <%= link_to "One Month Rails", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-time">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-time">
            <%= link_to "About", about_path, class: "nav-link" %>
          </li>
          <li class="nav-time">
            <%= link_to "Contact", contact_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
      <!-- Register, Log in, Log out -->
        <div class="navbar-right">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
            <!-- if user signed in, show log out link -->
            <li class="nav-time">
                <%= link_to "Log out", signout_path,  method: :delete, class: "nav-link" %>
              </li>
            <% else %>
            <!-- if use not signed in, show Register and Log in links -->
              <li class="nav-time">
                <%= link_to "Sign up", signup_path, class: "nav-link" %>
              </li>
              <li class="nav-time">
                <%= link_to "Sign in", signin_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>  
        </div>
    </nav>

    <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <main role="main">
      <%= yield %>
    </main>
    <!-- Footer -->
    <footer class="container">
      <hr>
      <center>
          <p>&copy; <b style="color:#6c757d;">SuryaKanta</b><b style="color:#ee7537;">Bootcamp</b> 2017-2018</p>
          <p style="color: #793131;">Kode Pengubah Hidup</p>
      </center>
    </footer>  
  </body>
</html>
